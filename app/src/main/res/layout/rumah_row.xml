<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/kontener">

        <TextView
            android:id="@+id/aaRumah"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Rumah"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        
        <ImageView
            android:id="@+id/aaImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aaRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/aaJenisRumah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Rumah"
                android:layout_marginLeft="100dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="#000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/aaHargaRumah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/aaAlamatRumah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>
</LinearLayout>